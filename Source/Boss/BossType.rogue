module Boss
uses ParseKit<<Boss>>

class BossType
  DEFINITIONS
    MASK      = 0b1111
    INT32     = 0b0000
    OBJECT    = 0b1000
    UNDEFINED = 0b1111

  PROPERTIES
    t          : Token
    name       : String
    attributes : Int32

  METHODS
    method init( t, name, attributes )

    method is_int32->Logical
      return ((attributes & MASK) == INT32)

    method is_primitive->Logical
      return ((attributes & MASK) < OBJECT)

endClass
