uses Boss
uses ParseKit<<Boss>>

BossConsole()

class BossConsole
  PROPERTIES
    vm = BossVM() : BossVM

  METHODS
    method init
      loop
        local cmd = Console.input( "Boss> " )
        vm.parse( "[Console]", cmd )

        try
          local result = vm.execute
          if (result.exists)
            println result
          endIf
        catch (err:BossError)
          err.print
          nextIteration
        endTry

      endLoop
endClass
